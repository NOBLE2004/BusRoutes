<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageViewBus"
        android:layout_width="@dimen/bus_image_width"
        android:layout_height="@dimen/bus_image_height" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageViewBus"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_bus_name"
                android:textStyle="bold" />

            <ImageView

                android:id="@+id/imageViewAccessibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/fab_margin"
                android:background="@drawable/accessibility"
                android:visibility="gone" />


        </RelativeLayout>

        <TextView
            android:id="@+id/textViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_details" />
    </LinearLayout>


</RelativeLayout>
